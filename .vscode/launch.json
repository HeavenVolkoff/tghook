{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: tghook",
      "type": "python",
      "request": "launch",
      "justMyCode": false,
      "stopOnEntry": false,
      "program": "tghook",
      "args": ["-vv", "-i", "url_to_video", "--external-host", "HOST", "BOT_TOKEN"],
      "linux": {
        "python": "${workspaceFolder}/.venv/bin/python"
      },
      "windows": {
        "python": "${workspaceFolder}/.venv/Scripts/python.exe"
      },
      "console": "integratedTerminal"
    }
  ]
}
